#include<iostream>
using namespace std;
int partition(int arr[],int low,int high){
	int pivot=arr[low];
	int i=low;
	int j=high;
	while(i<j){
		while(arr[i]<=pivot){
			i++;
		}
	
		while(arr[j]>pivot){
			j--;
		}
		
		if(i<j){
			swap(arr[i],arr[j]);
		}
		
	}
	swap(arr[low],arr[j]);
	return j;
}

void displayArr(int arr[],int size){
	for(int i=0;i<size;i++){
		cout<<arr[i]<<" ";
	}
}



void quickSort(int arr[],int low,int high){
	if(low<high){
		int loc=partition(arr,low,high);
		quickSort(arr,low,loc-1);
		quickSort(arr,loc+1,high);
	}
	
}

int main(){
	int arr[100];
	int size;
	
	
	cout<<"Enter the number of elements:";
	cin>>size;
	
	
	for(int i=0;i<size;i++){
		cout<<"Enter elements:";
		cin>>arr[i];
	}
	
	cout<<"Before Sorting:";
	displayArr(arr,size);
	cout<<endl;
	cout<<"After Sorting: ";
	quickSort(arr,0,size-1);
	displayArr(arr,size);
	
	
	
}
