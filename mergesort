#include<iostream>
using namespace std;
void displayArr(int arr[],int size){
	for(int i=0;i<size;i++){
		cout<<arr[i]<<" ";
	}
}


void merge(int arr[],int low,int mid,int high){
	int b[100];
	int i=low;
	int j=mid+1;
	int k=low;
	
	while(i<=mid && j<=high){
		if(arr[i]<=arr[j]){
			b[k]=arr[i];
			i++;
		}else{
			b[k]=arr[j];
			j++;
		}
		k++;
	}
	
	while(i<=mid){
		b[k]=arr[i];
		i++;
		k++;
	}
	
	while(j<=high){
		b[k]=arr[j];
		j++;
		k++;
	}
	
	
	for(int i=low;i<=high;i++){
		arr[i]=b[i];
	}
}




void mergeSort(int arr[],int low,int high){
	if(low<high){
		int mid=(low+high)/2;
		mergeSort(arr,low,mid);
		mergeSort(arr,mid+1,high);
		merge(arr,low,mid,high);
	}
}



int main(){
	int arr[100];
	int size;
	
	
	cout<<"Enter the number of elements:";
	cin>>size;
	
	for(int i=0;i<size;i++){
		cout<<"Enter elements:";
		cin>>arr[i];
	}
	
	cout<<"Before Sorting";
	displayArr(arr,size);
	cout<<endl;
	mergeSort(arr,0,size-1);
	
	cout<<"After Sorting";
	displayArr(arr,size);
	
	
	
}
